{
  "name": "dojo-todo-mvc",
  "version": "0.0.1",
  "description": "TodoMVC using Dojo",
  "main": "src/main.ts",
  "scripts": {
	  "build": "dojo build app -m dev && electron ./output/dev/electron.js"
